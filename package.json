{
  "name": "@hopin/web-build-tools",
  "private": true,
  "version": "0.0.13",
  "description": "A set of methods to make building web projects easier.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauntface/hopin-web-build-tools.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/test/**/*"
    ]
  },
  "author": "gauntface",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gauntface/hopin-web-build-tools/issues"
  },
  "homepage": "https://github.com/gauntface/hopin-web-build-tools#readme",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run bootstrap && lerna run build",
    "publish": "npm login && lerna publish",
    "test": "npm run build && nyc ava ./packages/*/test/*-test.js --verbose",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.15",
    "@types/fs-extra": "8.0.1",
    "@types/node": "10.12.24",
    "ava": "2.4.0",
    "coveralls": "3.0.9",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "lerna": "3.19.0",
    "nyc": "14.1.1",
    "puppeteer": "2.0.0",
    "rollup": "1.27.14",
    "rollup-plugin-size-snapshot": "0.10.0",
    "sinon": "7.5.0"
  }
}
