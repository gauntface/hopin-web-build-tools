{
  "name": "@hopin/web-build-tools",
  "private": true,
  "version": "0.0.13",
  "description": "A set of methods to make building web projects easier.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauntface/hopin-web-build-tools.git"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/test/**/*"
    ]
  },
  "author": "gauntface",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gauntface/hopin-web-build-tools/issues"
  },
  "homepage": "https://github.com/gauntface/hopin-web-build-tools#readme",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "npm run bootstrap && nyc ava ./packages/*/test/*-test.js --verbose",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/node": "10.12.24",
    "ava": "1.4.1",
    "coveralls": "3.0.3",
    "express": "4.17.1",
    "fs-extra": "8.0.1",
    "lerna": "3.14.1",
    "nyc": "14.1.1",
    "puppeteer": "1.17.0",
    "rollup": "1.12.3",
    "rollup-plugin-size-snapshot": "0.9.0",
    "sinon": "7.3.2"
  }
}
